<div class="container food-menu">
    <h1>Food Menu</h1>
    <div class="row">
        <div class="col-lg-6 table-list">
            <p>Table</p>
            <div id="result" class="left"></div>
        </div>

        <div class="col-lg-6 menu-list">

            {{#each categories }}

            <button class="btn btn-outline-light waves-effect btn-lg food-item" value="{{name}}"> {{name}} </button>

            {{/each}}
        </div>
    </div>
    <div class="row left">
        <div class="col-lg-8">
            <p>
                Subtotal: $<span id="total"></span>
            </p>
            <p>Tax: $<span id="tax"></span></p>
            <h6>
                Total: $<span id="totalAmount"></span>
            </h6>
        </div>
        <br>
        <div class="col-lg-4">
            <div class="top-margin right">
                <button class="btn btn-outline-light waves-effect btn-lg" id="send">Send Order</button>
            </div>
            <div class="top-margin right">
                <button class="btn btn-outline-light waves-effect btn-lg" id="pay">Pay</button>
            </div>

        </div>
    </div>
</div>